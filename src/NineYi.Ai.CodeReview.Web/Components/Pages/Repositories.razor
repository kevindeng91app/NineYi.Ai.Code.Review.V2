@page "/repositories"
@using NineYi.Ai.CodeReview.Web.Models
@using NineYi.Ai.CodeReview.Web.Services
@inject IApiClient Api
@rendermode InteractiveServer

<PageTitle>Repositories - Code Review</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">
        <i class="bi bi-folder me-2"></i>Repository 管理
    </h4>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        <i class="bi bi-plus-circle me-2"></i>新增 Repository
    </button>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (repositories.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        尚未設定任何 Repository，請點擊「新增 Repository」開始設定。
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>名稱</th>
                        <th>Full Name</th>
                        <th>平台</th>
                        <th>狀態</th>
                        <th>規則數</th>
                        <th>建立時間</th>
                        <th style="width: 150px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var repo in repositories)
                    {
                        <tr>
                            <td><strong>@repo.Name</strong></td>
                            <td><code>@repo.FullName</code></td>
                            <td>
                                <span class="badge @GetPlatformBadgeClass(repo.Platform)">
                                    <i class="bi @GetPlatformIcon(repo.Platform) me-1"></i>
                                    @EnumHelpers.GetPlatformName(repo.Platform)
                                </span>
                            </td>
                            <td>
                                @if (repo.IsActive)
                                {
                                    <span class="badge bg-success">啟用</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">停用</span>
                                }
                            </td>
                            <td>@repo.RuleCount</td>
                            <td>@repo.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(repo)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteRepository(repo)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (showModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "編輯" : "新增") Repository</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (!isEditing)
                    {
                        <div class="mb-3">
                            <label class="form-label">平台 *</label>
                            <select class="form-select" @bind="createModel.Platform">
                                <option value="1">GitHub</option>
                                <option value="2">GitLab</option>
                                <option value="3">Bitbucket</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Repository Full Name *</label>
                            <div class="input-group">
                                <input type="text" class="form-control" @bind="createModel.FullName"
                                       placeholder="owner/repository" />
                                <button class="btn btn-outline-secondary" type="button"
                                        @onclick="LookupRepository" disabled="@isLookingUp">
                                    @if (isLookingUp)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-search"></i>
                                    }
                                </button>
                            </div>
                            <small class="text-muted">例如: microsoft/vscode 或 your-org/your-repo</small>
                        </div>

                        @if (lookupResult != null)
                        {
                            <div class="alert alert-success">
                                <strong><i class="bi bi-check-circle me-1"></i>找到 Repository</strong>
                                <ul class="mb-0 mt-2">
                                    <li>名稱: @lookupResult.Name</li>
                                    <li>描述: @(lookupResult.Description ?? "(無)")</li>
                                    <li>預設分支: @lookupResult.DefaultBranch</li>
                                    <li>可見性: @(lookupResult.Private ? "私有" : "公開")</li>
                                </ul>
                            </div>
                        }
                        else if (lookupError != null)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>@lookupError
                                <br/><small>您仍然可以嘗試新增此 Repository。</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label">Repository</label>
                            <input type="text" class="form-control" value="@editingRepo?.FullName" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">顯示名稱</label>
                            <input type="text" class="form-control" @bind="updateModel.Name" />
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="isActiveForEdit" id="isActiveCheck">
                                <label class="form-check-label" for="isActiveCheck">
                                    啟用此 Repository
                                </label>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">取消</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveRepository" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        儲存
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show bg-danger text-white">
            <div class="toast-body">
                <i class="bi bi-exclamation-circle me-2"></i>@errorMessage
                <button type="button" class="btn-close btn-close-white ms-2" @onclick="() => errorMessage = null"></button>
            </div>
        </div>
    </div>
}

@code {
    private List<RepositoryDto> repositories = new();
    private bool isLoading = true;
    private bool showModal;
    private bool isEditing;
    private bool isSaving;
    private bool isLookingUp;
    private string? errorMessage;
    private RepositoryDto? editingRepo;
    private CreateRepositoryRequest createModel = new();
    private UpdateRepositoryRequest updateModel = new();
    private bool isActiveForEdit = true;
    private RepositoryLookupResult? lookupResult;
    private string? lookupError;

    protected override async Task OnInitializedAsync()
    {
        await LoadRepositories();
    }

    private async Task LoadRepositories()
    {
        isLoading = true;
        try
        {
            repositories = await Api.GetRepositoriesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"載入失敗: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        createModel = new CreateRepositoryRequest { Platform = 1 };
        lookupResult = null;
        lookupError = null;
        isEditing = false;
        editingRepo = null;
        showModal = true;
    }

    private void ShowEditModal(RepositoryDto repo)
    {
        editingRepo = repo;
        updateModel = new UpdateRepositoryRequest
        {
            Name = repo.Name
        };
        isActiveForEdit = repo.IsActive;
        isEditing = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingRepo = null;
        lookupResult = null;
        lookupError = null;
    }

    private async Task LookupRepository()
    {
        if (string.IsNullOrWhiteSpace(createModel.FullName))
        {
            lookupError = "請輸入 Repository Full Name";
            return;
        }

        isLookingUp = true;
        lookupResult = null;
        lookupError = null;

        try
        {
            lookupResult = await Api.LookupRepositoryAsync(createModel.Platform, createModel.FullName);
            if (lookupResult == null)
            {
                lookupError = "找不到此 Repository，請確認名稱是否正確，以及是否已設定該平台的 Access Token。";
            }
        }
        catch (Exception ex)
        {
            lookupError = $"查詢失敗: {ex.Message}";
        }
        finally
        {
            isLookingUp = false;
        }
    }

    private async Task SaveRepository()
    {
        isSaving = true;
        try
        {
            if (isEditing && editingRepo != null)
            {
                updateModel.IsActive = isActiveForEdit;
                await Api.UpdateRepositoryAsync(editingRepo.Id, updateModel);
            }
            else
            {
                await Api.CreateRepositoryAsync(createModel);
            }

            CloseModal();
            await LoadRepositories();
        }
        catch (Exception ex)
        {
            errorMessage = $"儲存失敗: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteRepository(RepositoryDto repo)
    {
        try
        {
            await Api.DeleteRepositoryAsync(repo.Id);
            await LoadRepositories();
        }
        catch (Exception ex)
        {
            errorMessage = $"刪除失敗: {ex.Message}";
        }
    }

    private string GetPlatformBadgeClass(int platform) => platform switch
    {
        1 => "bg-dark",
        2 => "bg-orange",
        3 => "bg-primary",
        _ => "bg-secondary"
    };

    private string GetPlatformIcon(int platform) => platform switch
    {
        1 => "bi-github",
        2 => "bi-gitlab",
        3 => "bi-bucket",
        _ => "bi-git"
    };
}

<style>
    .bg-orange {
        background-color: #fc6d26 !important;
    }
</style>
